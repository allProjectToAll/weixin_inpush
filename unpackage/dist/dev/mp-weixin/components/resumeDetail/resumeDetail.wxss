.resumeDetailContent {
  padding-bottom: 200rpx;
}
.resumeDetailContent .eachTitle {
    width: 100%;
    height: 76rpx;
    line-height: 76rpx;
    font-size: 28rpx;
    padding: 0 40rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    color: #969696;
}
.resumeDetailContent .eachForm {
    width: 100%;
    padding-left: 40rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    background: white;
    display: table;
}
.resumeDetailContent .eachForm .eachFormbox {
      width: 100%;
      display: table;
      border-bottom: 1px solid #eee;
}
.resumeDetailContent .eachForm .eachFormbox .require {
        color: #F80080;
        float: left;
        line-height: 90rpx;
        width: 30rpx;
}
.resumeDetailContent .eachForm .eachFormbox label {
        font-size: 34rpx;
        line-height: 90rpx;
        width: 120rpx;
        float: left;
}
.resumeDetailContent .eachForm .eachFormbox .formMess {
        height: 90rpx;
        line-height: 90rpx;
        color: #8C8C8C;
        float: right;
        font-size: 32rpx;
        margin-right: 40rpx;
}
.resumeDetailContent .uploadFiles {
    width: 100%;
    height: 176rpx;
    background: white;
    position: relative;
}
.resumeDetailContent .uploadFiles .uploadBox {
      width: 100%;
      height: 100%;
}
.resumeDetailContent .uploadFiles .uploadBox .addFileImg {
        width: 116rpx;
        height: 116rpx;
        margin: 30rpx 40rpx;
        float: left;
}
.resumeDetailContent .uploadFiles .uploadBox .loadDetailRule {
        padding-top: 30rpx;
        color: rgba(0, 0, 0, 0.45);
        line-height: 41rpx;
        font-size: 28rpx;
}
.resumeDetailContent .uploadFiles .uploadBox2 {
      position: absolute;
      left: 0;
      top: 0;
      background: white;
}
.resumeDetailContent .uploadFiles .uploadBox2 .fileName {
        width: 500rpx;
        font-size: 34rpx;
        color: #203AD2;
        margin: 63rpx 0 0 40rpx;
        overflow: hidden;
        white-space: nowrap;
        -o-text-overflow: ellipsis;
           text-overflow: ellipsis;
        float: left;
}
.resumeDetailContent .pickerBox {
    float: right;
    padding-right: 40rpx;
}
.resumeDetailContent .pickerBox .uni-input {
      width: 250rpx;
      height: 90rpx;
      line-height: 90rpx;
      text-align: right;
      font-size: 34rpx;
}
.resumeDetailContent .checkBox {
    padding-left: 40rpx;
    margin-top: 32rpx;
    font-size: 28rpx;
}
.resumeDetailContent .bottom {
    width: 100%;
    height: 140rpx;
    padding: 20rpx 40rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #FBFCFB;
    border-top: 1px solid #eee;
}
.resumeDetailContent .bottom .sureSubmit {
      width: 100%;
      background: -webkit-gradient(linear, right top, left top, from(#431aff), to(#203ad2));
      background: -webkit-linear-gradient(right, #431aff 0%, #203ad2 100%);
      background: -o-linear-gradient(right, #431aff 0%, #203ad2 100%);
      background: linear-gradient(270deg, #431aff 0%, #203ad2 100%);
      color: white;
}
.resumeDetailContent .bottom .bottomBtn {
      width: 325rpx;
      height: 100rpx;
      border: 1px solid #203AD2;
      float: left;
      -webkit-border-radius: 4px;
              border-radius: 4px;
      font-weight: bolder;
}
.resumeDetailContent .bottom .refuseBtn {
      background: rgba(32, 58, 210, 0.1);
      color: #203AD2;
}
.resumeDetailContent .bottom .agreeBtn {
      background: -webkit-gradient(linear, right top, left top, from(#431aff), to(#203ad2));
      background: -webkit-linear-gradient(right, #431aff 0%, #203ad2 100%);
      background: -o-linear-gradient(right, #431aff 0%, #203ad2 100%);
      background: linear-gradient(270deg, #431aff 0%, #203ad2 100%);
      color: white;
      margin-left: 20rpx;
}

