<view class="resumeDetailContent"><view class="eachTitle">候选人基本信息</view><view class="eachForm"><view class="eachFormbox"><label>姓名</label><view class="formMess">{{name}}</view></view></view><view class="eachForm"><view class="eachFormbox"><label>邮箱</label><view class="formMess">{{email}}</view></view></view><view class="eachForm"><view class="eachFormbox"><label>手机号</label><view class="formMess">{{phone}}</view></view></view><view class="eachTitle">附件简历</view><view class="uploadFiles"><view class="uploadBox uploadBox2"><view data-event-opts="{{[['tap',[['openFile',['$event']]]]]}}" class="fileName" bindtap="__e">{{uploadFileName}}</view></view></view><view class="eachTitle">推荐信息</view><view class="eachForm"><view class="eachFormbox"><view class="require">*</view><label style="width:220rpx;">与推荐人关系</label><view class="pickerBox"><picker value="{{pickIndex}}" range="{{array}}" range-key="value" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><block wx:if="{{pickIndex==-1}}"><view class="uni-input" style="color:gray;">请选择  ></view></block><block wx:else><view class="uni-input">{{array[pickIndex].value}}</view></block></picker></view></view></view><view class="checkBox"><checkbox-group data-event-opts="{{[['change',[['checkboxChange',['$event']]]]]}}" bindchange="__e"><label><checkbox value="true" color="#203AD2"></checkbox>确认所填信息属实</label></checkbox-group></view><block wx:if="{{isSurePush}}"><view class="bottom"><button data-event-opts="{{[['tap',[['sureSubmit',['$event']]]]]}}" class="sureSubmit" bindtap="__e">确认内推</button></view></block><block wx:else><view class="bottom"><button data-event-opts="{{[['tap',[['refuseFn',['$event']]]]]}}" class="bottomBtn refuseBtn" bindtap="__e">简历不匹配</button><button data-event-opts="{{[['tap',[['agreeFn',['$event']]]]]}}" class="bottomBtn agreeBtn" bindtap="__e">简历匹配</button></view></block></view>