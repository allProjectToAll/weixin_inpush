  width: 200rpx;
  height: 200rpx;
  margin: 100rpx auto 0;
  display: block;
}
.toSuccess .succTitle {
  width: 100%;
  padding: 50rpx 0 20rpx 0;
  text-align: center;
  font-size: 40rpx;
}
.toSuccess .mess {
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color: #888888;
  margin-top: 10rpx;
}
.toSuccess .btns {
  width: -webkit-calc(100% - 80rpx);
  width: calc(100% - 80rpx);
  height: 94rpx;
  margin: 0 auto;
  font-size: 36rpx;
